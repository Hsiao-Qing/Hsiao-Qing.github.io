    <script>
    var block_01_bg_btn = document.querySelectorAll(".block_01_bg_btn")
        var block_01_bg_text = document.querySelectorAll(".block_01_bg_text")

        for (let index = 0; index < block_01_bg_btn.length; index++) {
            const btnS = block_01_bg_btn[index];
            const contentS = block_01_bg_text[index];

            btnS.onclick = function () {
                clearAllActive()
                btnS.classList.add("active")
                contentS.classList.add("active")
            }
        }

        function clearAllActive() {
            for (let index = 0; index < block_01_bg_btn.length; index++) {
                block_01_bg_btn[index].classList.remove("active")
                block_01_bg_text[index].classList.remove("active")

            }
        }


        var block_02_bg_btn = document.querySelectorAll(".block_02_bg_btn")
        var block_02_bg_text = document.querySelectorAll(".block_02_bg_text")

        for (let index_01 = 0; index_01 < block_02_bg_btn.length; index_01++) {
            const block_02_btnS = block_02_bg_btn[index_01];
            const block_02_contentS = block_02_bg_text[index_01];

            block_02_btnS.onclick = function () {
                clearAllActive_01()
                block_02_btnS.classList.add("active")
                block_02_contentS.classList.add("active")
            }
        }

        function clearAllActive_01() {
            for (let index_01 = 0; index_01 < block_02_bg_btn.length; index_01++) {
                block_02_bg_btn[index_01].classList.remove("active")
                block_02_bg_text[index_01].classList.remove("active")
            }
        }


        var block_02_bg_text_btn = document.querySelectorAll(".block_02_bg_text_btn")
        var block_02_bg_text_text_l = document.querySelectorAll(".block_02_bg_text_text_l")
        var block_02_bg_text_text_r = document.querySelectorAll(".block_02_bg_text_text_r")


        for (let index_02 = 0; index_02 < block_02_bg_text_btn.length; index_02++) {
            const block_02_btnS = block_02_bg_text_btn[index_02];
            const block_02_l_contentS = block_02_bg_text_text_l[index_02];
            const block_02_r_contentS = block_02_bg_text_text_r[index_02];


            block_02_btnS.onclick = function () {
                clearAllActive_02()
                block_02_btnS.classList.add("active")
                block_02_l_contentS.classList.add("active")
                block_02_r_contentS.classList.add("active")

            }
        }

        function clearAllActive_02() {
            for (let index_02 = 0; index_02 < block_02_bg_text_btn.length; index_02++) {
                block_02_bg_text_btn[index_02].classList.remove("active")
                block_02_bg_text_text_l[index_02].classList.remove("active")
                block_02_bg_text_text_r[index_02].classList.remove("active")
            }
        }


        var right = document.getElementsByClassName("right");
        var si = right.length;
        var z = 1;
        turnRight();
        function turnRight() {
            if (si >= 1) {
                si--;
            }
            else {
                si = right.length - 1;
                function sttmot(i) {
                    setTimeout(function () { right[i].style.zIndex = "auto"; }, 300);
                }
                for (var i = 0; i < right.length; i++) {
                    right[i].className = "right";
                    sttmot(i);
                    z = 1;
                }
            }
            right[si].classList.add("flip");
            z++;
            right[si].style.zIndex = z;
        }
        function turnLeft() {
            if (si < right.length) {
                si++;
            }
            else {
                si = 1;
                for (var i = right.length - 1; i > 0; i--) {
                    right[i].classList.add("flip");
                    right[i].style.zIndex = right.length + 1 - i;
                }
            }
            right[si - 1].className = "right";
            setTimeout(function () { right[si - 1].style.zIndex = "auto"; }, 350);
        }



        var swiper = new Swiper('.swiper-container', {
            effect: 'coverflow',
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: 'auto',
            coverflowEffect: {
                rotate: 50,
                stretch: 0,
                depth: 100,
                modifier: 1,
                slideShadows: true,
            },
            pagination: {
                el: '.swiper-pagination',
            },
        });
    </script>
